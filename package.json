{
  "name": "@brudi/renovate-config",
  "version": "1.6.2",
  "description": "A shared Renovate configuration for brudi Community repositories. ",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": "github:brudi/renovate-config-brudi-community",
  "keywords": [],
  "author": "brudi",
  "license": "Apache-2",
  "renovate-config": {
    "default": {
      "extends": [
        ":separateMajorReleases",
        ":combinePatchMinorReleases",
        ":ignoreUnstable",
        ":prImmediately",
        ":semanticPrefixFixDepsChoreOthers",
        ":automergeDisabled",
        ":ignoreModulesAndTests",
        ":autodetectPinVersions",
        ":prHourlyLimit2",
        ":prConcurrentLimit20",
        "group:monorepos",
        "group:recommended",
        "helpers:disableTypesNodeMajor",
        "workarounds:all",
        ":pinOnlyDevDependencies"
      ],
      "semanticCommits": "enabled",
      "timezone": "Europe/Zurich",
      "schedule": "every weekend",
      "updateNotScheduled": false,
      "automerge": true,
      "major": {
        "automerge": false
      },
      "prConcurrentLimit": 10,
      "prHourlyLimit": 30,
      "labels": [
        "dependencies"
      ],
      "packageRules": [
        {
          "groupName": "AX Suite",
          "packagePatterns": [
            "@brudi/client",
            "@brudi/console",
            "@brudi/hui-app",
            "@brudi/hui-kit",
            "@brudi/id",
            "@brudi/iot",
            "@brudi/ops"
          ],
          "schedule": "every weekend"
        },
        {
          "groupName": "AX react components",
          "packagePatterns": [
            "@brudi/react-",
            "@brudi/ax-global-styles"
          ],
          "schedule": "every weekend"
        },
        {
          "matchDepTypes": [
            "devDependencies"
          ],
          "matchUpdateTypes": [
            "patch",
            "minor"
          ],
          "groupName": "dev dependencies (non-major)",
          "groupSlug": "dev-dependencies",
          "schedule": "every weekend"
        }
      ]
    }
  }
}
